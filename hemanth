// Declarative //
pipeline {
	agent any
		stages {
			stage('Build') {
			  agent {
			  	docker { image 'ubuntu'}
				}
				steps {
					docker run -it ubuntu
					}		
				}		
			stage('Test') {
				steps {
					echo 'Testing..'
					}
				}
			stage('Deploy') {
				steps {
					echo 'Deploying....'
					}
				}
			}		
		}	
